<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela de relatório</title>
    <link rel="stylesheet" href="./css/layoutRelatorio.css">


    <script src="https://kit.fontawesome.com/5c7c6d79df.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</head>

<body class="bg-body-secondary">
    <%- include('menu') %>
        <input type="hidden" id="nomesCaracteristicas" name="nomesCaracteristicas">
        <input type="hidden" id="contagensCaracteristicas" name="contagensCaracteristicas">

        <!--Duas áreas de texto, uma que mostra a lista de arquivos adicionadas e outra que ao clicar, mostra breviamente o código-fonte selecionado-->
        <div class="container">
            <h1>Relatório de Características</h1>
            <ul>
                <script>
                    for (let i = 0; i < nomesCaracteristicas.length; i++) {
                        document.write(`<li>${nomesCaracteristicas[i]}: ${contagensCaracteristicas[i]}</li>`);
                    }
                </script>
            </ul>
            
            <div class="row">
                <div class="col-md-6">
                    <h6>Resultado esperado</h6>
                    <div class="input-group ">
                        <textarea name="resultExpected" id="resultExpected" cols="30" rows="10"
                            class="form-control bg-secondary" oninput="fileUpdateValidate()"></textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <h6>Resultado obtido</h6>
                    <div class="input-group">
                        <textarea name="result" id="resultObtained" cols="30" rows="10" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom px-5">
            <div class="me-5 d-none d-lg-block px-5">
                <span><a href="/processamento">Voltar</a></span>
            </div>
        </section>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Recupere os dados JSON dos campos ocultos
                const nomesCaracteristicasInput = document.getElementById('nomesCaracteristicas');
                const contagensCaracteristicasInput = document.getElementById('contagensCaracteristicas');

                // Verifique se os campos não estão vazios
                if (nomesCaracteristicasInput.value && contagensCaracteristicasInput.value) {
                    // Parse dos dados JSON
                    const nomesCaracteristicas = JSON.parse(nomesCaracteristicasInput.value);
                    const contagensCaracteristicas = JSON.parse(contagensCaracteristicasInput.value);

                } else {
                    // Trate o caso em que os campos estão vazios ou não contêm JSON válido
                    console.error('Campos de entrada vazios ou não contêm JSON válido.');
                }
            });
        </script>

        <%- include('rodape') %>
</body>

</html>