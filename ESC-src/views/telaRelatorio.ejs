<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela de relatório</title>
    <link rel="stylesheet" href="./css/layoutRelatorio.css">


    <script src="https://kit.fontawesome.com/5c7c6d79df.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
</head>

<body class="bg-body-secondary">
    <%- include('menu') %>
        <nav>
            <input type="hidden" id="nomesCaracteristicas" name="nomesCaracteristicas">
            <input type="hidden" id="contagensCaracteristicas" name="contagensCaracteristicas">
        </nav>
        <!--Duas áreas de texto, uma que mostra a lista de arquivos adicionadas e outra que ao clicar, mostra breviamente o código-fonte selecionado-->
        <div class="container">
            <h1>Relatório de Características</h1>
            <span>
                <%= contChars %>
            </span>
            <span>
                <%= chars %>
            </span>
            <table class="table table-bordered tabela-relatorio">

                <tbody id="tabelaCaracteristicas">
                </tbody>

                <thead>
                    <tr>
                        <div class="container text-center">
                            <div class="row row-cols-4">

                                <div class="col"> IF </div>
                                <div class="col"> FOR </div>
                                <div class="col"> WHILE </div>
                                <div class="col"> CASE </div>
                                <div class="col"> ELSE </div>
                                <div class="col"> FGETS </div>
                                <div class="col"> GETCH </div>
                                <div class="col"> GETCHAR </div>
                                <div class="col"> GETCHE </div>
                                <div class="col"> PUTCHAR </div>
                                <div class="col"> PUTS </div>
                                <div class="col"> SWITCH </div>
                                <div class="col"> GETS </div>
                                <div class="col"> BREAK </div>
                                <div class="col"> RETURN </div>
                                <div class="col"> EXIT </div>
                                <div class="col"> DO </div>
                                <div class="col"> STRCPY </div>
                                <div class="col"> STRCMP </div>
                                <div class="col"> STRLEN </div>
                                <div class="col"> STRUPR </div>
                                <div class="col"> STRLWR </div>
                                <div class="col"> STRREV </div>
                                <div class="col"> TOLOWER </div>
                                <div class="col"> TOUPPER </div>
                                <div class="col"> ISALPHA </div>
                                <div class="col"> FOPEN </div>
                                <div class="col"> FCLOSE </div>
                                <div class="col"> FEOF </div>
                                <div class="col"> REMOVE </div>
                                <div class="col"> FFLUSH </div>
                                <div class="col"> SIZEOF </div>
                                <div class="col"> TYPEDEOF </div>
                                <div class="col"> STRUCT </div>
                                <div class="col"> MALLOC </div>
                                <div class="col"> FREE </div>
                                <div class="col"> #INCLUDE </div>
                                <div class="col"> SYSTEM </div>
                                <div class="col"> DEFAULT </div>
                                <div class="col"> MAIN </div>
                                <div class="col"> FUNCTIONS </div>
                                <div class="col"> ARGC </div>
                                <div class="col"> ARGV </div>

                            </div>
                        </div>
                    </tr>
                </thead>

            </table>
            <!-- <script>
                    for (let i = 0; i < nomesCaracteristicas.length; i++) {
                        document.write(`<li>${nomesCaracteristicas[i]}: ${contagensCaracteristicas[i]}</li>`);
                    }
                </script>-->


            <div class="row">
                <div class="col-md-6">
                    <h6>Resultado esperado</h6>
                    <div class="input-group ">
                        <textarea name="resultExpected" id="resultExpected" cols="30" rows="10"
                            class="form-control bg-secondary" oninput="fileUpdateValidate()"></textarea>
                    </div>
                </div>
                <div class="col-md-6">
                    <h6>Resultado obtido</h6>
                    <div class="input-group">
                        <textarea name="result" id="resultObtained" cols="30" rows="10" class="form-control"></textarea>
                    </div>
                </div>
            </div>
        </div>

        <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom px-5">
            <div class="me-5 d-none d-lg-block px-5">
                <span><a href="/processamento">Voltar</a></span>
            </div>
        </section>

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Recupere os dados do localStorage
                const infoJSON = localStorage.getItem("arquivosInfo");
                const nomesCaracteristicas = localStorage.getItem("nomesCaracteristicas");
                const contagensCaracteristicas = localStorage.getItem("contagensCaracteristicas");
                const charsContJSON = localStorage.getItem("charsCont");
                const charsNameJSON = localStorage.getItem("charsName");

                // Verifique se os dados existem no localStorage
                if (infoJSON && nomesCaracteristicas && contagensCaracteristicas && charsContJSON && charsNameJSON) {
                    // Faça o parsing dos dados de JSON
                    const arquivosInfo = JSON.parse(infoJSON);
                    const nomesCaracteristicasArray = nomesCaracteristicas.split(",");
                    const contagensCaracteristicasArray = contagensCaracteristicas.split(",");
                    const charsCont = JSON.parse(charsContJSON);
                    const charsName = JSON.parse(charsNameJSON);

                    // Agora você tem acesso aos dados e pode usá-los na página de relatório
                    console.log('Dados de arquivosInfo:', arquivosInfo);
                    console.log('Nomes de Características:', nomesCaracteristicasArray);
                    console.log('Contagens de Características:', contagensCaracteristicasArray);
                    console.log('Dados de charsCont:', charsCont);
                    console.log('Dados de charsName:', charsName);

                    // Faça o processamento ou exibição dos dados conforme necessário
                } else {
                    // Os dados não existem no localStorage, faça o tratamento apropriado
                    console.log('Dados não encontrados no localStorage.');
                }
            });
        </script>


        <%- include('rodape') %>
</body>

</html>